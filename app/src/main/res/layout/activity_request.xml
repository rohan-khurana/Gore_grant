<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Request"
    android:layout_margin="16dp"
    android:padding="10dp"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >

    <Spinner
        android:id="@+id/blood_grp_requested"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="@string/blood_grp"
        android:dropDownWidth="400dp"
        android:textColorHint="@color/colorWhite"
        android:inputType="text"
        android:layout_marginTop="30dp"
        />

    <Spinner
        android:id="@+id/blood_units_requested"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="@string/blood_units"
        android:dropDownWidth="400dp"
        android:textColorHint="@color/colorWhite"
        android:inputType="text"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hours"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:textColor="#2E2D2D"
        android:layout_marginTop="20dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24"
            android:textSize="20sp"
            android:textAlignment="inherit"
            android:textColor="#2E2E2E"
            android:checked="true"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="48"
            android:textSize="20sp"
            android:textAlignment="inherit"
            android:textColor="#2E2E2E"
            android:layout_marginStart="20dp"
           />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="72"
            android:textSize="20sp"
            android:textAlignment="inherit"
            android:textColor="#2E2E2E"
            android:layout_marginStart="20dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="96"
            android:textSize="20sp"
            android:textAlignment="inherit"
            android:textColor="#2E2E2E"
            android:layout_marginStart="20dp"
            />

    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timings"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:textColor="#2E2D2D"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">


  <EditText
      android:layout_width="175dp"
      android:layout_height="50dp"
      android:hint="@string/from"
      android:background="@drawable/box_outline"
      android:gravity="center"

      />

        <EditText
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:hint="@string/to"
            android:layout_marginStart="10dp"
            android:background="@drawable/box_outline"
            android:gravity="center"
            />
    </LinearLayout>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:textColor="#000"
        android:hint="@string/donor_msg"
        android:background="@drawable/box_outline"
        android:gravity="center_horizontal|center_vertical"/>

</com.google.android.material.textfield.TextInputLayout>


</LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorAccent"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/request"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:text="@string/request"
                android:textStyle="normal|bold"
                android:textAllCaps="true"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical|center_horizontal"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorAccent"
android:layout_marginStart="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cancel"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/cancel"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:text="@string/cancel"
                android:textStyle="normal|bold"
                android:textAllCaps="true"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical|center_horizontal"

                />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>