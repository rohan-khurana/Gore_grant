<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Terms"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/img_transit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="10dp"
        android:contentDescription="@string/term_1"
        android:src="@drawable/gradient_bg4"
        />

    <CheckBox
        android:id="@+id/check_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/term_1"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:textColor="#353333"
        android:textSize="16sp"
        android:textAlignment="inherit"
        android:checked="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/img_transit"
        />
    <CheckBox
        android:id="@+id/check_above_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/term_2"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:textColor="#353333"
        android:textSize="16sp"
        android:textAlignment="inherit"
        android:checked="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/check_available"
        />
    <CheckBox
        android:id="@+id/check_show_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/term_3"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:textColor="#353333"
        android:textSize="16sp"
        android:textAlignment="inherit"
        android:checked="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/check_above_18"
        />
    <CheckBox
        android:id="@+id/check_agree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/term_4"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:textColor="#353333"
        android:textSize="16sp"
        android:textAlignment="inherit"
        android:checked="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/check_show_details"
        />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:text="@string/register"
        android:textAllCaps="true"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        />
</RelativeLayout>