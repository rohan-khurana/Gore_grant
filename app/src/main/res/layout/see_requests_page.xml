<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/blood_grp_required"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/gradient_bg4"
                    android:text="B+"
                    android:textAlignment="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="50sp"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"
                    android:textStyle="normal|bold"/>

                <ImageView
                    android:id="@+id/requester_name_img"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/blood_grp_required"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_person24dp"/>

                <TextView
                    android:id="@+id/requester_name"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/requester_name_img"
                    android:layout_below="@+id/blood_grp_required"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="Sanchi Rastogi"/>

                <ImageView
                    android:id="@+id/donation_date_img"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/requester_name_img"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/date"/>

                <TextView
                    android:id="@+id/donation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/donation_date_img"
                    android:layout_below="@+id/requester_name"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="2.2.19"/>


                <ImageView
                    android:id="@+id/requester_time_from_img"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/donation_date_img"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/time"/>

                <TextView
                    android:id="@+id/requester_time_from"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/requester_time_from_img"
                    android:layout_below="@+id/donation_date"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="24 hrs"/>



                <ImageView
                    android:id="@+id/blood_units_img"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/requester_time_from_img"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/blood_units"/>

                <TextView
                    android:id="@+id/blood_units"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/blood_units_img"
                    android:layout_below="@+id/requester_time_from"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="2 units"/>

                <ImageView
                    android:id="@+id/blood_requester_call_img"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/blood_units_img"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_phone24dp"/>

                <TextView
                    android:id="@+id/blood_requester_call"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/blood_requester_call_img"
                    android:layout_below="@+id/blood_units"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="9315320663"/>

                <ImageView
                    android:id="@+id/donation_location_img"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/blood_requester_call_img"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/location"/>

                <TextView
                    android:id="@+id/donation_location"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/donation_location_img"
                    android:layout_below="@+id/blood_requester_call"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="BLK Hospital, Karol Bagh"/>

                <ImageView
                    android:id="@+id/donation_msg_img"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/donation_location_img"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/msg"/>

                <TextView
                    android:id="@+id/donation_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/donation_msg_img"
                    android:layout_below="@+id/donation_location"
                    android:gravity="center_vertical"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="My mother met an accident...."/>

                <com.google.android.gms.maps.MapView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/donation_msg"/>

                <Button
                    android:id="@+id/donate_btn"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/green_box"
                    android:textSize="20sp"
                    android:text="DONATE"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_below="@+id/location"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>