<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="20dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFF"
           >

            <TextView
                android:id="@+id/blood_grp_required_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textColor="#000"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_marginTop="60dp"
                android:text="@string/blood_grp_required"/>

            <TextView
                android:id="@+id/blood_grp_required"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B+"
                android:layout_marginTop="60dp"
                android:textAllCaps="true"
                android:textSize="22sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold|italic"
                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/blood_request_created_by_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textColor="#000"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:text="@string/blood_request_created_by"
                android:layout_below="@+id/blood_grp_required_text"/>

            <TextView
                android:id="@+id/blood_request_created_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abc Xyz"
                android:textSize="22sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold|italic"
                android:layout_marginStart="10dp"
                android:layout_below="@id/blood_grp_required"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/blood_request_donate_at_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textColor="#000"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:text="@string/donate_at"
                android:layout_below="@+id/blood_request_created_by_text"/>

            <TextView
                android:id="@+id/blood_request_donate_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PQr Hospital"
                android:layout_marginTop="20dp"
                android:textSize="22sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold|italic"
                android:layout_marginStart="10dp"
                android:layout_below="@id/blood_request_created_by"
                android:layout_alignParentEnd="true"
             />

            <TextView
                android:id="@+id/blood_request_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textColor="#000"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:text="@string/date"
                android:layout_below="@+id/blood_request_donate_at_text"/>

            <TextView
                android:id="@+id/blood_request_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23.1.19"
                android:layout_marginTop="20dp"
                android:textAllCaps="true"
                android:textSize="22sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold|italic"
                android:layout_marginStart="10dp"
                android:layout_below="@id/blood_request_donate_at"
                android:layout_alignParentEnd="true"/>

            <com.google.android.gms.maps.MapView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/map_location"
                android:layout_below="@+id/blood_request_date"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/call_btn"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textStyle="bold|normal"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:text="@string/call"
                android:background="@drawable/red_box"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/map_location"/>

            <Button
                android:id="@+id/report_btn"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textStyle="bold|normal"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:text="@string/report"
                android:background="@drawable/red_box"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_below="@id/map_location"
                android:layout_toEndOf="@+id/call_btn"/>


        </RelativeLayout>

        <ImageView
            android:id="@+id/icon_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/red_box"
            android:contentDescription="@string/cancel"
            android:elevation="20dp"
            android:src="@drawable/cancel" />




    </androidx.cardview.widget.CardView>


    </RelativeLayout>

    </LinearLayout>
</ScrollView>