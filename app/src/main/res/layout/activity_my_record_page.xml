<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/gradient_bg4"
                   />
                <ImageView
                    android:id="@+id/donation_date_img"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/view"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/date"/>

                <TextView
                    android:id="@+id/donation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@+id/donation_date_img"
                    android:layout_below="@+id/view"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="2.2.19"/>


                <ImageView
                    android:id="@+id/donation_location_img"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/donation_date_img"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/location"/>

                <TextView
                    android:id="@+id/donation_location"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/donation_location_img"
                    android:layout_below="@+id/donation_date"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="BLK Hospital, Karol Bagh"/>




            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>